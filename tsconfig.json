{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./src",
      "paths": {
        "controllers/*": [".src/controllers"],
        "routes/*": [".src/routes"],
        "models/*": [".src/models"],
        "types/*": [".src/types"]
      }
  },
  "include": [
    "src/**/*"
  ]
}